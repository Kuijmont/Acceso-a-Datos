package ej2;

import java.io.IOException;
import java.util.Scanner;

import org.xml.sax.Attributes;
import org.xml.sax.InputSource;
import org.xml.sax.SAXException;
import org.xml.sax.XMLReader;
import org.xml.sax.helpers.DefaultHandler;
import org.xml.sax.helpers.XMLReaderFactory;

public class VerLineaLibroSAX extends DefaultHandler{

}
class SAX{

	public static void main(String[] args) {

		Scanner s = new Scanner(System.in);
		System.out.print("Introduzca path fichero XML:");
		String path_xml = s.next();
		try {
			// Creamos la factoria analizadores por defecto
			XMLReader reader = XMLReaderFactory.createXMLReader();
			// AÃ±adimos nuestro manejador al reader
			reader.setContentHandler(new VerLineaLibroSAX());
			// Procesamos el xml de ejemplo
			reader.parse(new InputSource(path_xml));
		} catch (SAXException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
		s.close();
	}

}






















